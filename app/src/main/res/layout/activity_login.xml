<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/login_screen_padding"
    tools:context="com.narmware.vvmexam.activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="2dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:srcCompat="@drawable/vvm_logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/login_img_margin_bottom"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <EditText
            android:id="@+id/edt_username"
            android:hint="Username"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="15dp"
            android:layout_margin="@dimen/login_txt_margin"
            android:background="@drawable/custom_edt"
            android:padding="@dimen/login_txt_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edt_password"
            android:hint="Password"
            android:drawableLeft="@drawable/ic_vpn_key"
            android:drawablePadding="15dp"
            android:layout_margin="@dimen/login_txt_margin"
            android:background="@drawable/custom_edt"
            android:padding="@dimen/login_txt_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_login"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/login_btn_margin_bottom"
            android:layout_marginLeft="@dimen/login_btn_margin_left"
            android:layout_marginRight="@dimen/login_btn_margin_right"
            android:background="@drawable/custom_login_btn"
            android:text="Login"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_forgot"
            android:text="Forgot Password?"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:textColor="@color/red_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Don't have an account?"
            style="@style/text_view_style"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_register"
            style="@style/text_view_style"
            android:text=" Register Now"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
