<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EndExamActivity">

    <LinearLayout
        android:id="@+id/lin_details"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_title"
            android:layout_marginTop="@dimen/personal_info_padding"
            android:layout_marginRight="@dimen/personal_info_padding"
            android:layout_marginLeft="@dimen/personal_info_padding"
            android:text="Exam finished"
            style="@style/title_text_style"
            android:textSize="@dimen/location_text_size"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/personal_info_padding"
            android:layout_marginRight="@dimen/personal_info_padding"
            android:layout_marginLeft="@dimen/personal_info_padding"
            android:text="Total Questions : 100"
            style="@style/title_text_style"
            android:textSize="@dimen/location_text_size"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/personal_info_padding"
            android:layout_marginRight="@dimen/personal_info_padding"
            android:layout_marginLeft="@dimen/personal_info_padding"
            android:text="Total attempts : 82"
            style="@style/title_text_style"
            android:textSize="@dimen/location_text_size"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_login"
            style="@style/button_style"
            android:padding="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/login_btn_margin_bottom"
            android:layout_marginLeft="@dimen/login_btn_margin_left"
            android:layout_marginRight="@dimen/login_btn_margin_right"
            android:background="@drawable/custom_login_btn"
            android:text="Submit Result"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:layout_toRightOf="@+id/lin_details"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        app:srcCompat="@drawable/ic_check_circle"
        android:layout_width="60dp"
        android:layout_height="60dp"></ImageView>
</RelativeLayout>